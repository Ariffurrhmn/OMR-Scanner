<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.MainController"
            styleClass="root">

    <!-- ========== SIDEBAR (Left) ========== -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar" spacing="0">
            <!-- App Title -->
            <VBox styleClass="sidebar-header">
                <padding>
                    <Insets top="20" right="16" bottom="20" left="16"/>
                </padding>
                <Label text="Portable OMR Scanner" styleClass="app-title"/>
                <Label text="v2.0" styleClass="app-subtitle"/>
            </VBox>

            <Separator/>

            <!-- Navigation Buttons -->
            <VBox styleClass="nav-container" spacing="4">
                <padding>
                    <Insets top="16" right="8" bottom="16" left="8"/>
                </padding>

                <Button fx:id="btnHome" text="ðŸ   Home" 
                        styleClass="nav-button" 
                        onAction="#navigateToHome"
                        maxWidth="Infinity"/>

                <Button fx:id="btnScan" text="ðŸ“„  Scan" 
                        styleClass="nav-button" 
                        onAction="#navigateToScan"
                        maxWidth="Infinity"/>

                <Button fx:id="btnBatch" text="ðŸ“  Batch" 
                        styleClass="nav-button" 
                        onAction="#navigateToBatch"
                        maxWidth="Infinity"/>

                <Button fx:id="btnKeys" text="ðŸ”‘  Keys" 
                        styleClass="nav-button" 
                        onAction="#navigateToKeys"
                        maxWidth="Infinity"/>

                <Button fx:id="btnHistory" text="ðŸ“Š  History" 
                        styleClass="nav-button" 
                        onAction="#navigateToHistory"
                        maxWidth="Infinity"/>
            </VBox>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS"/>

            <!-- Sidebar Footer -->
            <VBox styleClass="sidebar-footer">
                <padding>
                    <Insets top="16" right="16" bottom="16" left="16"/>
                </padding>
                <Label text="Version 2.0" styleClass="label-muted"/>
            </VBox>
        </VBox>
    </left>

    <!-- ========== CONTENT AREA (Center) ========== -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <!-- Content loaded dynamically -->
        </StackPane>
    </center>

    <!-- ========== STATUS BAR (Bottom) ========== -->
    <bottom>
        <HBox styleClass="status-bar" spacing="16" alignment="CENTER_LEFT">
            <padding>
                <Insets top="8" right="16" bottom="8" left="16"/>
            </padding>
            <Label fx:id="statusLabel" text="Ready" styleClass="status-text"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="dbStatusLabel" text="DB: Not Connected" styleClass="status-text"/>
        </HBox>
    </bottom>

</BorderPane>

